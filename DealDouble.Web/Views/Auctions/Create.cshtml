
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title"> Create Auction </h5>
</div>
<form id="formCreate">
    <div class="modal-body">
        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" class="form-control" placeholder="Enter Title" name="Title">
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" class="form-control" placeholder="Enter Description" name="Description">
        </div>
        <div class="form-group">
            <label for="ActualAmount">Actual Amount</label>
            <input type="number" class="form-control" placeholder="Enter Actual Amount" name="ActualAmount">
        </div>
        <div class="form-group">
            <label for="StartingTime">Starting Time</label>
            <input type="date" class="form-control" placeholder="Enter Starting Time" name="StartingTime">
        </div>
        <div class="form-group">
            <label for="EndTime">End Time</label>
            <input type="date" class="form-control" placeholder="Enter End Time" name="EndTime">
        </div>
        <div class="form-group">
            <label for="AuctionImages">Select Imges</label>
            <input type="file" class="form-control" placeholder="Auction Images" name="AuctionImages" id="btnImages" multiple>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="btnCreate" class="btn btn-primary">Save</button>
    </div>
</form>





<script>

    $("#btnCreate").click(function () {

        $.ajax({
            type: 'POST',
            url: '@Url.Action("Create","Auctions")',
            data: $("#formCreate").serialize()

        })
            .done(function (response) {
                $(".mainContent").html(response);
                $('#formModal').modal('toggle');
                $(".actionArea").html("");

            })
            .fail(function (data) {
                alert("failed");
            });

    });

    $("#btnImages").change(function () {
        var images = this.files;
        var imageData = new FormData();
        debugger;
        for (var i = 0; i < images.length; i++) {
            imageData.append("Pictures", images[i])
        }

        $.ajax({
            type: 'POST',
            url: '@Url.Action("UploadImages","Shared")',
            data: imageData,
            dataType: 'json',
            processData: false,
            contentType: false
           
        })
            .done(function (response) {
               
