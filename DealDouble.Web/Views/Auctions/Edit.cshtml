@model DealDouble.Entities.Auction

@{
    Layout = null;
}

<h2>Edit</h2>

<form id="formEdit">

    <div class="form-group" hidden>
        <label for="ID">ID</label>
        <input type="number" value="@Model.ID" class="form-control" name="ID">
    </div>
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" value="@Model.Title" placeholder="Enter Title" name="Title">
    </div>
    <br />
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" value="@Model.Description" placeholder="Enter Description" name="Description">
    </div>
    <br />
    <div class="form-group">
        <label for="ActualAmount">Actual Amount</label>
        <input type="number" class="form-control" value="@Model.ActualAmount" placeholder="Enter Actual Amount" name="ActualAmount">
    </div>
    <br />
    <div class="form-group">
        <label for="StartingTime">Starting Time</label>
        <input type="date" class="form-control" value="@Model.StartingTime" placeholder="Enter Starting Time" name="StartingTime">
    </div>
    <br />
    <div class="form-group">
        <label for="EndTime">End Time</label>
        <input type="date" class="form-control" value="@Model.EndTime" placeholder="Enter End Time" name="EndTime">
    </div>
    <br />
    <div class="form-group">
        <label for="PictureURL">Picture URL</label>
        <input type="text" class="form-control" value="@Model.PictureURL" placeholder="Enter Picture URL" name="PictureURL">
    </div>
    <br /><br />

    <button class="btn btn-primary" id="btnEdit">Submit</button>

</form>

<script>
    $("#btnEdit").click(function () {

        $.ajax({
            type: 'POST',
            url: '/Auctions/Edit/',
            data: $("#formEdit").serialize()

        })
            .done(function (data) {
                $(".mainContent").html(data);
                $(".actionArea").html("");

            })
            .fail(function (data) {
                alert("failed");
            });

    });
</script>